<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.app.GroupActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/s_groupLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:longClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Имя группы"
        android:id="@+id/s_groupName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/s_groupLogo"
        android:textColorLink="@color/vk_color" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пользователи"
        android:id="@+id/s_listOfMembers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/s_groupLogo"
        android:textSize="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фото"
        android:id="@+id/s_photos"
        android:layout_alignTop="@+id/s_wiki_page"
        android:layout_alignBottom="@+id/s_wiki_page"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вики-разметка"
        android:id="@+id/s_wiki_page"
        android:layout_below="@+id/s_description"
        android:layout_alignBottom="@+id/s_listOfMembers"
        android:layout_toRightOf="@+id/s_listOfMembers"
        android:singleLine="false"
        android:layout_toLeftOf="@+id/s_photos"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/s_description"
        android:layout_toRightOf="@+id/s_groupLogo"
        android:layout_above="@+id/s_listOfMembers"
        android:text="Описание"
        android:layout_below="@+id/s_groupName"
        android:layout_toLeftOf="@+id/s_links" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ссылки"
        android:id="@+id/s_links"
        android:layout_above="@+id/s_photos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/s_photos"
        android:layout_alignStart="@+id/s_photos"
        android:textSize="10dp" />

</RelativeLayout>
